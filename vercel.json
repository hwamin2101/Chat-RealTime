{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/socket.io/(.*)", "dest": "backend/dist/index.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}